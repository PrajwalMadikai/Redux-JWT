{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",  // Ensures compiled files are saved in the "dist" directory
    "rootDir": "./src",  // Specifies the root directory for your TypeScript files
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],  // Include all TypeScript files in the "src" folder
  "exclude": ["node_modules"]  // Exclude node_modules from compilation
}
